<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lebartodev.kursach">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".KursachApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.CreatePostActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.SinglePostActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.CategoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.FeedSortActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>